<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <include layout="@layout/include_title_bar" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/color_005EB7"
            android:layout_weight="1"
            android:padding="16dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/light_bar"
                android:background="@drawable/bg"
                android:layout_marginTop="24dp"
                android:layout_width="128dp"
                android:layout_height="48dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="16dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView style="@style/AppPrimaryTitleTextViewStyle"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/txt_led"
                android:layout_width="match_parent" />

            <TableLayout
                android:background="@color/color_F0F0F0"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="160dp">
                <TableRow
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:src="@drawable/red"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/green"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/blue"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView style="@style/AppPrimaryTitleTextViewStyle"
                        android:text="@string/txt_red_led"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView style="@style/AppPrimaryTitleTextViewStyle"
                        android:text="@string/txt_green_led"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView style="@style/AppPrimaryTitleTextViewStyle"
                        android:text="@string/txt_blue_led"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>