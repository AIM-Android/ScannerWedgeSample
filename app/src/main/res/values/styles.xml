<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ContainerStyle" parent="@style/ContainerStyle_Base">
    </style>

    <style name="ContainerStyle_Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextStyle" parent="@style/TextStyle_Base">
    </style>

    <style name="TextStyle_Base">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="@style/ButtonStyle_Base">
    </style>

    <style name="ButtonStyle_Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NFCTextViewStyle" parent="@style/NFCTextView_Base">
    </style>

    <style name="NFCTextView_Base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingVertical" tools:targetApi="o">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>